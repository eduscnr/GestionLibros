<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="upLibros">
    <class>com.gestion.gestionlibros.modelo.Libro</class>
    <class>com.gestion.gestionlibros.modelo.Genero</class>
    <class>com.gestion.gestionlibros.modelo.Autor</class>
    <class>com.gestion.gestionlibros.modelo.DetallesVenta</class>
    <class>com.gestion.gestionlibros.modelo.Cliente</class>
    <class>com.gestion.gestionlibros.modelo.Libro</class>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.OracleDialect"/>
      <property name="hibernate.connection.url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
      <property name="hibernate.connection.driver_class" value="oracle.jdbc.OracleDriver"/>
      <property name="hibernate.connection.username" value="EDUARDO"/>
      <property name="hibernate.connection.password" value="1234"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>

  </persistence-unit>
</persistence>
